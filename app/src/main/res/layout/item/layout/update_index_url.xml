<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="behavior"
            type="com.coolwin.XYT.activity.MyIndexActivity" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#22000000"
        android:gravity="bottom"
        android:orientation="vertical">
        <TextView
            android:id="@+id/pic_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:textColor="@color/login_icon_bg"
            android:textSize="@dimen/text_size"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/item_background" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:gravity="center"
            android:onClick="@{behavior.openGallery}"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="更换图片"
            android:textSize="@dimen/text_size" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/item_background" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:gravity="center"
            android:onClick="@{behavior.openUpdateUrl}"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="更换链接"
            android:textSize="@dimen/text_size" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/item_background" />
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/item_background" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:gravity="center"
            android:onClick="@{behavior.cannelDialog}"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="取消"
            android:textSize="@dimen/text_size" />
    </LinearLayout>
</layout>
