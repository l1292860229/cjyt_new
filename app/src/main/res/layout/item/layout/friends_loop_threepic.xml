<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="context" type="String"/>
        <variable
            name="name" type="String"/>
        <variable
            name="commentCount" type="String"/>
        <variable
            name="praiseCount" type="String"/>
        <variable
            name="time" type="String"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="@dimen/item_margin_left"
        android:paddingLeft="@dimen/item_margin_left"
        android:paddingRight="@dimen/item_margin_left">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{context}"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="@dimen/text_size"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/pic1"
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="5dp"
                    app:actualImageScaleType="centerInside"
                    app:placeholderImage="@drawable/plugin_camera_no_pictures"/>
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/pic2"
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="5dp"
                    app:actualImageScaleType="centerInside"
                    app:placeholderImage="@drawable/plugin_camera_no_pictures"/>
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/pic3"
                    android:layout_width="110dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="5dp"
                    app:actualImageScaleType="centerInside"
                    app:placeholderImage="@drawable/plugin_camera_no_pictures"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:layout_marginRight="5dp"
                android:text="@{name}"
                android:maxLength="15"
                android:ellipsize="end"
                android:textSize="12dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:layout_marginRight="5dp"
                android:text="@{commentCount}"
                android:textSize="12dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:layout_marginRight="5dp"
                android:text="@{praiseCount}"
                android:textSize="12dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:layout_marginRight="5dp"
                android:text="@{time}"
                android:textSize="12dp"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="#dadada"
            android:layout_height="0.01dp"
            android:layout_marginTop="@dimen/item_margin_left"/>
    </LinearLayout>
</layout>