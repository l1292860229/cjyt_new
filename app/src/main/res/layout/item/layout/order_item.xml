<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="ordercode" type="String"/>
        <variable
            name="orderstatus" type="String"/>
        <variable
            name="orderpay" type="String"/>
        <variable
            name="orderall" type="String"/>
        <variable
            name="orderuser" type="String"/>
        <variable
            name="ordertel" type="String"/>
        <variable
            name="orderaddress" type="String"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F4F4F4"
        android:orientation="vertical">
        <View
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="0.01dp"
            android:background="#dadada"
            />
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/item_margin_left"
            android:paddingBottom="@dimen/item_margin_left"
            android:paddingLeft="@dimen/item_margin_left"
            android:paddingRight="@dimen/item_margin_left"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@{ordercode}"
                android:textSize="@dimen/text_size"/>
            <TextView
                android:id="@+id/orderstatuslayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@{orderstatus}"
                android:textColor="@color/about_website_color"
                android:textSize="@dimen/text_size" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@{orderpay}"
                android:textColor="@color/red"
                android:textSize="@dimen/text_size" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.01dp"
            android:background="#dadada"
            />
        <LinearLayout
            android:id="@+id/goodslayoutview"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/item_margin_left"
            android:paddingRight="@dimen/item_margin_left"
            android:orientation="vertical">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/goodslayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
        <TextView
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="@dimen/item_margin_left"
            android:paddingRight="@dimen/item_margin_left"
            android:gravity="right"
            android:textColor="@color/editor_text_color"
            android:text="@{orderall}"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.01dp"
            android:background="#dadada"
            />
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/item_margin_left"
            android:paddingRight="@dimen/item_margin_left"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textColor="@color/editor_text_color"
                android:text="收货人"/>
            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="#dadada"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="3"
                android:text="@{orderuser}"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/editor_text_color"
                android:text="电话"/>
            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="#dadada"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginLeft="5dp"
                android:text="@{ordertel}"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.01dp"
            android:background="#dadada"
            />
        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/item_margin_left"
            android:paddingRight="@dimen/item_margin_left"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:textColor="@color/editor_text_color"
                android:text="收货地址"/>
            <View
                android:layout_width="0.01dp"
                android:layout_height="match_parent"
                android:background="#dadada"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@{orderaddress}"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.01dp"
            android:layout_marginBottom="5dp"
            android:background="#dadada"
            />
    </LinearLayout>
</layout>