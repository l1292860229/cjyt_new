<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="context" type="String"/>
        <variable
            name="name" type="String"/>
        <variable
            name="commentCount" type="String"/>
        <variable
            name="praiseCount" type="String"/>
        <variable
            name="time" type="String"/>
        <variable
            name="job" type="String"/>
        <variable
            name="company" type="String"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#dadada"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/item_margin_left"
            android:layout_marginLeft="@dimen/item_margin_left"
            android:layout_marginRight="@dimen/item_margin_left">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/friends_icon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    app:placeholderImage="@drawable/contact_default_header" />
                <TextView
                    android:id="@+id/name"
                    android:layout_toRightOf="@+id/friends_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:maxLength="11"
                    android:text="@{name}"
                    android:textColor="@color/black"
                    android:textSize="14dp" />
                <TextView
                    android:id="@+id/company"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/name"
                    android:layout_toRightOf="@+id/friends_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="20"
                    android:ellipsize="end"
                    android:text="@{company}"
                    android:textColor="@color/text_title_color"
                    android:textSize="10dp"
                    android:visibility="visible"/>
                <TextView
                    android:id="@+id/job"
                    android:layout_toRightOf="@+id/company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="20"
                    android:layout_below="@+id/name"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/text_title_color"
                    android:textSize="10dp"
                    android:text="@{job}"
                    android:ellipsize="end"
                    android:visibility="visible"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="@{context}"
                android:ellipsize="end"
                android:maxLines="6"
                android:textSize="@dimen/text_size"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/pic"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:actualImageScaleType="centerInside"
                    app:placeholderImage="@drawable/plugin_camera_no_pictures"/>
                <ImageView
                    android:id="@+id/play_video_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    android:src="@drawable/play_voice_btn"/>
                <TextView
                    android:id="@+id/play_video_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="190dp"
                    android:text="00:01"
                    android:textSize="10dp"
                    android:visibility="gone"
                    android:textColor="@color/text_color"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="@dimen/item_margin_left"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:layout_marginRight="5dp"
                android:text="@{commentCount}"
                android:textSize="12dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:layout_marginRight="5dp"
                android:text="@{praiseCount}"
                android:textSize="12dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color"
                android:layout_marginRight="5dp"
                android:text="@{time}"
                android:textSize="12dp"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="#dadada"
            android:layout_marginLeft="@dimen/item_margin_left"
            android:layout_marginRight="@dimen/item_margin_left"
            android:layout_height="0.01dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/item_margin_left"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:id="@+id/zan_btn_icon"
                    android:layout_width="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="15dp"
                    android:background="@drawable/friends_loop_cancle_zan_icon_d"/>
                <TextView
                    android:id="@+id/zan_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="赞"
                    android:textColor="#AAAAAA"
                    android:textSize="14dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/view_image_comment_icon" />
                <TextView
                    android:id="@+id/comment_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评论"
                    android:textColor="#AAAAAA"
                    android:textSize="14dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:id="@+id/shareweichat"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="5dip"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/shareweichat"
                    android:visibility="visible"/>
                <TextView
                    android:id="@+id/shareweichat_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="转发"
                    android:textColor="#AAAAAA"
                    android:textSize="14dp" />
                </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#dadada"/>
    </LinearLayout>
</layout>