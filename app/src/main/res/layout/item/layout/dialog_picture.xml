<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="behavior" type="com.coolwin.XYT.activity.CertificationActivity"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#22000000"
        android:gravity="bottom"
        android:orientation="vertical" >
        <ImageView
            android:id="@+id/picture"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="@{behavior.cannelDialog}"
            android:src="@drawable/gongpai" />
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="拍照"
                android:textSize="16dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:onClick="@{behavior.openCamera}"
                android:background="@color/white"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/item_background"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="从手机相册选择"
                android:textSize="16dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:onClick="@{behavior.openGallery}"
                android:background="@color/white"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/item_background"/>
            <TextView
                android:onClick="@{behavior.cannelDialog}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="取消"
                android:textSize="16dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="center"
                android:background="@color/white"/>
        </LinearLayout>
    </LinearLayout>
</layout>
