<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include
        android:id="@+id/title_layout"
        layout="@layout/title_layout" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/headsmall"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/contact_default_header"/>
        <TextView
            android:id="@+id/bbs_title"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="老司机开火车"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="18dp"/>
        <TextView
            android:id="@+id/bbs_content"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="老司机开火车"
            android:maxWidth="120dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_color"
            android:textSize="12dp"/>
        <TextView
            android:id="@+id/bbs_money"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥12"
            android:layout_marginBottom="20dp"
            android:textColor="@color/viewfinder_laser"
            android:textSize="12dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/application_my_album_select">
    <TextView
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认加入鱼塘"
        android:textColor="@color/black"
        android:textSize="16dp"/>
        <Button
            android:id="@+id/join"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:background="@color/common_botton_bar_blue"
            android:text="加入该鱼塘"
            android:textSize="16dp"
            android:textColor="@color/white"/>
        <Button
            android:id="@+id/isjoin"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:background="@color/text_color"
            android:text="已加入该鱼塘"
            android:textSize="16dp"
            android:textColor="@color/white"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>