<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >
        <LinearLayout
            android:id="@+id/topview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#efeff4"
            android:paddingBottom="20dp">
                <RelativeLayout
                    android:id="@+id/sousuo"
                    android:layout_below="@+id/title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="44dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/sousuo"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="#d9d9d9"
                    android:visibility="visible" />

                <RelativeLayout
                    android:id="@+id/new_friends_layout"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="#ffffff">

                        <ImageView
                            android:id="@+id/iv_avatar"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:src="@drawable/new_friends_icon" />

                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:layout_toRightOf="@id/iv_avatar"
                            android:text="@string/new_friends"
                            android:textColor="#353535"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/new_friends_message_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="-17dp"
                            android:layout_toRightOf="@id/iv_avatar"
                            android:background="@drawable/message_count_bg"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="11dp"
                            android:visibility="gone" />
                </RelativeLayout>

                <View
                    android:id="@+id/view_temp"
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#d9d9d9"
                    android:visibility="visible" />
                <RelativeLayout
                    android:id="@+id/group_content"
                    android:background="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="44dp" >
                        <ImageView
                            android:id="@+id/iv_service_icon"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:src="@drawable/service_icon" />
                        <TextView
                            android:id="@+id/tv_name_service_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:layout_toRightOf="@id/iv_service_icon"
                            android:text="@string/room_chat"
                            android:textColor="#353535"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/group_message_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="-17dp"
                            android:layout_toRightOf="@id/iv_service_icon"
                            android:background="@drawable/message_count_bg"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text=""
                            android:visibility="gone"
                            android:textColor="@color/white"
                            android:textSize="11dp" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="#d9d9d9"
                    android:visibility="gone" />
                <RelativeLayout
                    android:id="@+id/bbs_content"
                    android:background="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:visibility="gone">
                        <ImageView
                            android:id="@+id/bbs_headerlayout"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:src="@drawable/app_news_icon"  />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:layout_toRightOf="@id/bbs_headerlayout"
                            android:text="@string/bbs_chat"
                            android:textColor="#353535"
                            android:textSize="16sp" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="#d9d9d9"
                    android:visibility="gone" />
                <RelativeLayout
                    android:id="@+id/bbs_hangye_content"
                    android:background="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:visibility="gone">
                        <ImageView
                            android:id="@+id/bbs_hangye_userlayout"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:src="@drawable/chat_group_icon" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:layout_toRightOf="@id/bbs_hangye_userlayout"
                            android:text="@string/bbs_hangye_chat"
                            android:textColor="#353535"
                            android:textSize="16sp" />
                </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
                <RelativeLayout
                    android:id="@+id/one"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="onTabClicked" >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:focusable="false"
                            android:scaleType="centerInside"
                            android:src="@drawable/choose_renmai_selected" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:textColor="@color/em_botton_text_color"
                            android:text="鱼群" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/two"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="onTabClicked" >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:focusable="false"
                            android:scaleType="centerInside"
                            android:src="@drawable/choose_renmai_selected_z" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:textColor="@color/em_botton_text_color"
                            android:text="大鱼" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/three"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="onTabClicked" >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:focusable="false"
                            android:scaleType="centerInside"
                            android:src="@drawable/choose_renmai_selected_z" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:textColor="@color/em_botton_text_color"
                            android:text="小鱼" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/fore"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="onTabClicked" >
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:focusable="false"
                            android:scaleType="centerInside"
                            android:src="@drawable/choose_renmai_selected_right" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:textColor="@color/em_botton_text_color"
                            android:text="鱼苗" />
                </RelativeLayout>
        </LinearLayout>
        <com.coolwin.XYT.widget.PagerSlidingTabStrip
            android:layout_below="@+id/title_layout"
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="40dp"
            android:visibility="gone"/>
        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tabs" />
</LinearLayout>