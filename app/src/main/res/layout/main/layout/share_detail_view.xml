<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="behavior"
            type="com.coolwin.XYT.activity.FriendsLoopDetailActivity" />
        <variable
            name="name"
            type="String"/>
        <variable
            name="time"
            type="String"/>
        <variable
            name="content"
            type="String"/>
        <variable
            name="urltext"
            type="String"/>
        <variable
            name="jobtext" type="String"/>
        <variable
            name="companytext" type="String"/>
        <variable
            name="zantext" type="String"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical" >
        <include
            android:id="@+id/title_layout"
            layout="@layout/title_layout"/>
        <com.coolwin.library.view.ObservableScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dip"
            android:layout_weight="1"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/item_margin_left"
                android:orientation="vertical" >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <com.facebook.drawee.view.SimpleDraweeView
                            android:id="@+id/friends_icon"
                            android:layout_width="@dimen/item_height"
                            android:layout_height="@dimen/item_height"
                            android:scaleType="fitXY"
                            app:placeholderImage="@drawable/contact_default_header"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/item_margin_left"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@{name}"
                                android:textColor="@color/application_friends_loop_user_name"
                                android:textSize="@dimen/text_size" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dip"
                                android:text="@{time}"
                                android:textColor="@color/application_gray_black"
                                android:textSize="12dp" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/item_margin_left"
                        android:orientation="vertical">
                        <VideoView
                            android:id="@+id/video"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:visibility="gone"/>
                        <TextView
                            android:id="@+id/content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@{content}"
                            android:textColor="@color/application_black"
                            android:textSize="@dimen/text_size" />
                        <LinearLayout
                            android:id="@+id/piclist"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                        </LinearLayout>
                        <RelativeLayout
                            android:id="@+id/url"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:background="@color/item_background"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:visibility="gone">
                            <com.facebook.drawee.view.SimpleDraweeView
                                android:id="@+id/image_url"
                                android:layout_margin="5dp"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                app:placeholderImage="@drawable/logo"/>
                            <TextView
                                android:layout_toRightOf="@+id/image_url"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="2"
                                android:text="@{urltext}"
                                android:layout_centerInParent="true"
                                android:textSize="@dimen/text_size"/>
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_marginTop="@dimen/item_margin_left"
                            android:layout_height="wrap_content">
                            <com.facebook.drawee.view.SimpleDraweeView
                                android:id="@+id/friends_icon2"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                app:placeholderImage="@drawable/contact_default_header" />
                            <TextView
                                android:id="@+id/name"
                                android:layout_toRightOf="@+id/friends_icon2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:maxLength="11"
                                android:text="@{name}"
                                android:textColor="@color/black"
                                android:textSize="14dp" />
                            <TextView
                                android:id="@+id/company"
                                android:layout_marginLeft="10dp"
                                android:layout_below="@+id/name"
                                android:layout_toRightOf="@+id/friends_icon2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLength="20"
                                android:ellipsize="end"
                                android:text="@{companytext}"
                                android:textColor="@color/text_title_color"
                                android:textSize="10dp"
                                android:visibility="visible"/>
                            <TextView
                                android:id="@+id/job"
                                android:layout_toRightOf="@+id/company"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLength="20"
                                android:layout_below="@+id/name"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/text_title_color"
                                android:textSize="10dp"
                                android:text="@{jobtext}"
                                android:ellipsize="end"
                                android:visibility="visible"/>
                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_marginBottom="@dimen/item_margin_left"
                            android:layout_marginTop="@dimen/item_margin_left"
                            android:layout_height="0.01dp"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:id="@+id/zan_icon"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/friends_loop_cancle_zan_icon_d"/>
                            <TextView
                                android:layout_toRightOf="@+id/zan_icon"
                                android:layout_marginLeft="@dimen/item_margin_left"
                                android:text="@{zantext}"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/item_margin_left"
                            android:layout_height="0.01dp"/>
                        <LinearLayout
                            android:id="@+id/comment_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:orientation="vertical">
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
        </com.coolwin.library.view.ObservableScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:id="@+id/menubutton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="@{behavior.showShareReply}"
                    android:src="@drawable/commentimg"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_weight="2"
                    android:onClick="@{behavior.showShareReply}"
                    android:src="@drawable/view_image_comment_icon"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_weight="2"
                    android:src="@drawable/shareweichat"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/menubutton2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/edit"
                    android:layout_width="280dp"
                    android:layout_height="30dp"
                    android:background="@color/white"
                    android:paddingLeft="10dp"
                    android:hint="@string/say_nothing"/>
                <Button
                    android:onClick="@{behavior.sendReply}"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dip"
                    android:layout_marginRight="5dip"
                    android:background="@drawable/btn_yuanjiao_yellow"
                    android:text="@string/send"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>