<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="behavior"
            type="com.coolwin.XYT.activity.LoginActivity" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff">
        <include
            android:id="@+id/title_layout"
            layout="@layout/title_layout"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textSize="24dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_layout"
            android:layout_marginTop="112dp"
            android:layout_centerInParent="true">
            <LinearLayout
                android:id="@+id/usernamelayout"
                android:layout_width="345dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/signin"/>
                <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginLeft="15dp"
                    android:maxLength="11"
                    android:hint="@string/phone_number_hint"
                    android:singleLine="true"
                    android:textColorHint="#bcbcbc"
                    android:textSize="15dp"
                    android:background="@null"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#bcbcbc"
                android:layout_marginTop="44dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>
            <LinearLayout
                android:id="@+id/pwdlayout"
                android:layout_width="345dp"
                android:layout_height="45dp"
                android:layout_below="@id/usernamelayout"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/password"/>
                <EditText
                    android:id="@+id/password"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="15dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:paddingLeft="5dp"
                    android:textColor="#808080"
                    android:textColorHint="#bcbcbc"
                    android:textSize="@dimen/login_username_text_size" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#bcbcbc"
                android:layout_marginTop="108dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>
            <Button
                android:layout_width="345dp"
                android:layout_height="44dp"
                android:onClick="@{behavior.login}"
                android:layout_marginTop="29dp"
                android:background="@drawable/btn_yuanjiao_yellow"
                android:textColor="@color/white"
                android:text="@string/login"
                android:textSize="16dp"
                android:layout_below="@+id/pwdlayout"
                android:layout_alignStart="@+id/register" />
            <Button
                android:id="@+id/register"
                android:onClick="@{behavior.register}"
                android:layout_width="345dp"
                android:layout_height="44dp"
                android:layout_below="@id/pwdlayout"
                android:layout_marginTop="94dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/btn_yuanjiao_while"
                android:textColor="#FF4A51"
                android:text="注册账号"
                android:textSize="16dp" />
        </RelativeLayout>

    </RelativeLayout>
</layout>