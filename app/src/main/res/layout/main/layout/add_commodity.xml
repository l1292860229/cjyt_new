<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="behavior" type="com.coolwin.XYT.activity.AddCommodityActivity" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <include
            android:id="@+id/title_layout"
            layout="@layout/title_layout" />
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/word_limit"
                android:background="@drawable/message_edit_bg"
                android:gravity="left|top"
                android:hint="商品名称...."
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:maxLength="140"
                android:paddingTop="8dp"
                android:minLines="3"
                android:layout_marginLeft="@dimen/item_margin_left"
                android:layout_marginRight="@dimen/item_margin_left"
                android:layout_marginTop="15dp"
                android:textColor="@color/application_black"
                android:textColorHint="@color/application_deep_gray_black"
                android:textSize="@dimen/text_size" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/message_edit_bg"
                android:gravity="left|top"
                android:hint="价格"
                android:inputType="number"
                android:minLines="1"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="@dimen/item_margin_left"
                android:layout_marginRight="@dimen/item_margin_left"
                android:textColor="@color/application_black"
                android:textColorHint="@color/application_deep_gray_black"
                android:textSize="@dimen/text_size" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/message_edit_bg"
                android:gravity="left|top"
                android:hint="折扣"
                android:inputType="numberDecimal"
                android:minLines="1"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="@dimen/item_margin_left"
                android:layout_marginRight="@dimen/item_margin_left"
                android:textColor="@color/application_black"
                android:textColorHint="@color/application_deep_gray_black"
                android:textSize="@dimen/text_size" />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/iv_pic"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="@dimen/item_margin_left"
                android:layout_height="wrap_content">
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </LinearLayout>
 </layout>