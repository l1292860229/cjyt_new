<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="behavior" type="com.coolwin.XYT.activity.CertificationActivity" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/item_background"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <include layout="@layout/title_layout"
            android:id="@+id/title_layout"/>
        <LinearLayout
            android:id="@+id/layout1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="@dimen/item_margin_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="如何认证?"
                android:textColor="@color/black"
                android:textSize="16dp"/>
            <View
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/black"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• 完善名片基本信息：姓名、职位、公司。"
                android:textColor="#666"
                android:textSize="15dp"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• 上传名片或工牌（工作证明）。"
                android:textColor="#666"
                android:textSize="15dp"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• 上传手持身份证正面照片。"
                android:textColor="#666"
                android:textSize="15dp"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="• 提交认证申请后，我们小秘书会在5-7个工作日内通知您认证结果。"
                android:textColor="#666"
                android:textSize="15dp"/>
            <Button
                android:onClick="@{behavior.openRenZhen}"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_yuanjiao_yellow"
                android:textColor="@color/white"
                android:text="立即认证"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:gravity="center_horizontal">
            <RelativeLayout
                android:layout_marginTop="@dimen/item_margin_top"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="84dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人名片"
                    android:layout_marginLeft="@dimen/item_margin_left"
                    android:layout_marginTop="20dp"
                    android:textSize="@dimen/text_size"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确保姓名,职位,公司等信息清晰可辨识"
                    android:layout_marginLeft="@dimen/item_margin_left"
                    android:layout_marginTop="45dp"
                    android:textColor="#9b9b9b"
                    android:textSize="13dp"/>
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/mingpian"
                    android:onClick="@{behavior.openCard}"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/smiley_add_btn"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="@dimen/item_margin_top"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="84dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工牌"
                    android:layout_marginLeft="@dimen/item_margin_left"
                    android:layout_marginTop="20dp"
                    android:textSize="@dimen/text_size"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确保姓名,职位,公司等信息清晰可辨识"
                    android:layout_marginLeft="@dimen/item_margin_left"
                    android:layout_marginTop="45dp"
                    android:textColor="#9b9b9b"
                    android:textSize="13dp"/>
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/gongpai"
                    android:onClick="@{behavior.openCard}"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/smiley_add_btn"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="@dimen/item_margin_top"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="84dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身份证"
                    android:layout_marginLeft="@dimen/item_margin_left"
                    android:layout_marginTop="20dp"
                    android:textSize="@dimen/text_size"/>
                <TextView
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:text="须为本人手持二代身份证,原图无修改信息清晰可辨识"
                    android:layout_marginLeft="@dimen/item_margin_left"
                    android:layout_marginTop="45dp"
                    android:textColor="#9b9b9b"
                    android:textSize="13dp"/>
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/shenfenzheng"
                    android:onClick="@{behavior.openCard}"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/smiley_add_btn"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <Button
                android:layout_width="320dp"
                android:layout_height="44dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_yuanjiao_yellow"
                android:textColor="@color/white"
                android:onClick="@{behavior.uploadUserAttext}"
                android:text="提交"/>
        </LinearLayout>
    </LinearLayout>
</layout>