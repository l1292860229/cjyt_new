<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/title_layout"
        layout="@layout/title_layout" />

    <ScrollView
        android:layout_below="@+id/title_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        android:background="@color/item_background"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingBottom="15dp"
                android:background="@drawable/cirle_edit_bg" >

                <TextView
                    android:id="@+id/word_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:padding="10dp"
                    android:text="@string/word_limit"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/word_limit"
                    android:background="@color/transparent"
                    android:gravity="left|top"
                    android:hint="@string/talk_nothing"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:maxLength="140"
                    android:paddingTop="8dp"
                    android:minLines="3"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/application_black"
                    android:textColorHint="@color/application_deep_gray_black"
                    android:textSize="16sp" />
                <com.coolwin.XYT.widget.MyGridView
                    android:id="@+id/gridview"
                    android:layout_below="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentBottom="true"
                    android:listSelector="@drawable/transparent_selector"
                    android:numColumns="4"/>
                <VideoView
                    android:id="@+id/video"
                    android:layout_below="@+id/content"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:visibility="gone"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentBottom="true"
                    android:soundEffectsEnabled="true"/>
                <RelativeLayout
                    android:id="@+id/url"
                    android:layout_below="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/select_system_text_color"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/image_url"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/setting_notify_icon"/>
                    <TextView
                        android:id="@+id/url_text"
                        android:layout_toRightOf="@+id/image_url"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:text="链接分享"
                        android:layout_marginLeft="10dp"
                        android:layout_centerInParent="true"
                        android:textSize="18dp"/>
                </RelativeLayout>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#dadada"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="15dp"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="标签"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="15dp"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    />
                <RelativeLayout
                    android:id="@+id/bq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RadioGroup android:id="@+id/radioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true">
                        <RadioButton
                            android:id="@+id/live"
                            android:layout_marginLeft="15dp"
                            android:button="@null"
                            android:layout_width="75dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:background="@drawable/choose_friendloop_type_selected"
                            android:textColor="@color/em_main_botton_text_color"
                            android:text="生活"
                            android:textSize="16dp"
                            />
                        <RadioButton
                            android:id="@+id/qiye"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="10dp"
                            android:button="@null"
                            android:layout_width="75dp"
                            android:layout_height="25dp"
                            android:gravity="center"
                            android:background="@drawable/choose_friendloop_type_selected"
                            android:textColor="@color/em_main_botton_text_color"
                            android:text="企业"
                            android:textSize="15dp"
                            />
                        <RadioButton
                            android:id="@+id/weishan"
                            android:layout_marginLeft="5dp"
                            android:button="@null"
                            android:layout_width="75dp"
                            android:layout_height="25dp"
                            android:layout_marginRight="10dp"
                            android:gravity="center"
                            android:background="@drawable/choose_friendloop_type_selected"
                            android:textColor="@color/em_main_botton_text_color"
                            android:checked="true"
                            android:text="微商"
                            android:textSize="15dp"
                            />
                        <RadioButton
                            android:id="@+id/huodong"
                            android:layout_marginLeft="5dp"
                            android:button="@null"
                            android:layout_width="75dp"
                            android:layout_height="25dp"
                            android:gravity="center"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/choose_friendloop_type_selected"
                            android:textColor="@color/em_main_botton_text_color"
                            android:text="活动"
                            android:textSize="15dp"
                            />
                    </RadioGroup>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="45dip"
                    android:background="@drawable/single_splite"
                    android:orientation="horizontal"
                    android:padding="5dip"
                    android:visibility="gone" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="合成二维码"
                        android:textColor="@color/application_black"
                        android:textSize="16sp" />
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent" >
                        <ToggleButton
                            android:id="@+id/heeweibtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="15dp"
                            android:layout_toLeftOf="@+id/tip_message_arrow"
                            android:background="@drawable/selector_butn_toggle"
                            android:text=""
                            android:textOff=""
                            android:textOn=""
                            android:textSize="18sp" />
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/isshowlayout"
                    android:layout_width="fill_parent"
                    android:layout_height="50dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:layout_marginTop="30dip"
                    android:orientation="horizontal"
                    android:visibility="gone">
                    <CheckBox
                        android:id="@+id/isshow"
                        android:checked="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="是否同步到小鱼圈"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginTop="10dp"
                    android:background="#dadada"/>
                <LinearLayout
                    android:id="@+id/loacation_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="50dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:orientation="horizontal" >
                    <ImageView
                        android:id="@+id/location_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dip"
                        android:background="@drawable/share_location_icon"
                        android:contentDescription="@string/desc" />

                    <TextView
                        android:id="@+id/loaction_addr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dip"
                        android:text="@string/location_current"
                        android:textColor="@color/application_black"
                        android:textSize="@dimen/eight" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/area_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="50dip"
                    android:layout_marginLeft="10dip"
                    android:layout_marginRight="10dip"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/area_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dip"
                        android:background="@drawable/share_area"
                        android:contentDescription="@string/desc" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dip"
                        android:text="@string/watch_area"
                        android:textColor="@color/application_black"
                        android:textSize="@dimen/eight" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>