<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#efefef" >
    <ImageView
        android:id="@+id/redpacketbottom"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/redpacketbottom"
        android:layout_alignParentBottom="true"/>
    <RelativeLayout
        android:id="@+id/redpackettop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/redpackettop1"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/redpackettop"/>
        <ImageView
            android:id="@+id/redpackethead"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/contact_default_header"/>
        <TextView
            android:id="@+id/redpacketname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="名字"
            android:layout_below="@+id/redpackethead"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:textColor="#EBCD99"
            android:textSize="20dp"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/closeredpacket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" × "
        android:padding="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:textSize="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优惠答案:"
            android:textColor="#E42254"
            android:textSize="18dp"/>
        <EditText
            android:id="@+id/answer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入答案,回答正确才可抢红包"
            android:textSize="14dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提示:"
            android:textSize="14dp"/>
        <TextView
            android:id="@+id/prompt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#E42254"
            android:textSize="14dp"/>
        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="提交"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@color/white"/>
    </LinearLayout>
</RelativeLayout>
