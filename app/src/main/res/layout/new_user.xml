<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/item_background"
    android:orientation="vertical">
    <include
        android:id="@+id/title_layout"
        layout="@layout/title_layout" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:gravity="center">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#bcbcbc" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp" >
            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:maxLength="11"
                android:hint="例如：陈晨"
                android:singleLine="true"
                android:textColorHint="#bcbcbc"
                android:textSize="15dp"
                android:background="@null"
                android:layout_marginLeft="95dp"/>
            <TextView
                android:id="@+id/tv_usernick"
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="姓名"
                android:textColor="#353535"
                android:textSize="16dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp" >
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#bcbcbc" />
            <EditText
                android:id="@+id/tjr"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:maxLength="11"
                android:hint="填写推荐人ID"
                android:inputType="number"
                android:singleLine="true"
                android:textColorHint="#bcbcbc"
                android:textSize="15dp"
                android:background="@null"
                android:layout_marginLeft="95dp"/>
            <TextView
                android:id="@+id/tv_tjr"
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="推荐人"
                android:textColor="#353535"
                android:textSize="16dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp" >
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#bcbcbc" />
            <EditText
                android:id="@+id/telephone"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:hint="你的手机号码"
                android:inputType="phone"
                android:maxLength="11"
                android:singleLine="true"
                android:textColorHint="#bcbcbc"
                android:textSize="15dp"
                android:background="@null"
                android:layout_marginLeft="95dp"/>
            <TextView
                android:id="@+id/telephonetext"
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="手机号"
                android:textColor="#353535"
                android:textSize="16dp" />
            <Button
                android:id="@+id/sendcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:background="@null"
                android:enabled="false"
                android:textSize="15dp"
                android:layout_marginRight="15dp"
                android:textColor="#FF4A51"
                android:text="获取验证码"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp" >
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#bcbcbc"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>
            <TextView
                android:id="@+id/code_text"
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="验证码"
                android:textColor="#353535"
                android:textSize="16dp" />
            <EditText
                android:id="@+id/code"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:hint="请输入验证码"
                android:inputType="phone"
                android:maxLength="11"
                android:singleLine="true"
                android:textColorHint="#bcbcbc"
                android:textSize="15dp"
                android:background="@null"
                android:layout_marginLeft="95dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp" >
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#bcbcbc"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>
            <TextView
                android:id="@+id/tv_password"
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="密码"
                android:textColor="#353535"
                android:textSize="16dp" />
            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:hint="填写密码"
                android:inputType="phone"
                android:maxLength="11"
                android:singleLine="true"
                android:textColorHint="#bcbcbc"
                android:textSize="15dp"
                android:background="@null"
                android:layout_marginLeft="95dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/iv_hide"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:padding="10dp"
                    android:src="@drawable/fx_icon_hide" />

                <ImageView
                    android:id="@+id/iv_show"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:padding="10dp"
                    android:src="@drawable/fx_icon_show"
                    android:visibility="gone" />
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#bcbcbc" />
        <Button
            android:id="@+id/buy_code"
            android:layout_width="345dp"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_yuanjiao_yellow"
            android:text="注册"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>