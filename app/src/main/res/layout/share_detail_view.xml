<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/title_layout"
        layout="@layout/title_layout" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/bottom_menu"
        android:layout_below="@+id/title_layout"
        android:layout_marginTop="5dip"
        android:fadingEdge="none"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dip"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/friends_icon"
                    android:layout_width="@dimen/listview_header_size"
                    android:layout_height="@dimen/listview_header_size"
                    android:contentDescription="@string/desc"
                    android:scaleType="fitXY"
                    android:src="@drawable/contact_default_header" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_toRightOf="@+id/friends_icon"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dip"
                        android:text=""
                        android:textColor="@color/application_friends_loop_user_name"
                        android:textSize="@dimen/eight" />

                    <TextView
                        android:id="@+id/content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dip"
                        android:background="@drawable/friends_long_click_bg_color"
                        android:focusable="false"
                        android:maxLines="3"
                        android:text=""
                        android:visibility="gone"
                        android:textColor="@color/application_black"
                        android:textSize="@dimen/sixteen" />

                    <LinearLayout
                        android:id="@+id/send_img_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/url"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:background="@color/select_system_text_color"
                        android:layout_marginBottom="20dp"
                        android:visibility="gone">
                        <ImageView
                            android:id="@+id/image_url"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/setting_notify_icon"/>
                        <TextView
                            android:id="@+id/url_text"
                            android:layout_toRightOf="@+id/image_url"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:text="链接分享"
                            android:layout_marginLeft="10dp"
                            android:layout_centerInParent="true"
                            android:textSize="18dp"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/video_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="80dp"
                        android:minHeight="80dp"
                        android:visibility="gone">
                        <ImageView
                            android:id="@+id/chat_talk_msg_info_msg_video"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_margin="1dp"
                            android:adjustViewBounds="true"
                            android:maxHeight="120dp"
                            android:maxWidth="120dp"
                            android:scaleType="fitXY" />
                        <ImageView
                            android:id="@+id/play_video"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:src="@drawable/play_voice_btn"/>
                        <TextView
                            android:id="@+id/play_video_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            android:textSize="12dp"
                            android:background="@color/black"
                            android:textColor="@color/white"/>
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/location_addr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:visibility="gone"
                        android:textColor="@color/application_friends_loop_user_name" />

                    <RelativeLayout
                        android:id="@+id/function_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="35dip"
                        android:layout_marginBottom="0dip"
                        android:layout_marginTop="0dip" >

                        <LinearLayout
                            android:id="@+id/control_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dip"
                                android:text=""
                                android:textColor="@color/application_gray_black"
                                android:textSize="12sp" />

                            <Button
                                android:id="@+id/del_btn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@null"
                                android:text="@string/del"
                                android:textColor="#ff0000"
                                android:textSize="14sp"
                                android:visibility="gone" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/jump_layout"
                            android:layout_width="165dip"
                            android:layout_height="40dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal"
                            android:visibility="visible" >
                            <LinearLayout
                                android:id="@+id/zhuan_btn"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1.0"
                                android:background="@drawable/dialog_cancle_btn"
                                android:gravity="center_horizontal|center_vertical"
                                android:orientation="horizontal" >
                                <ImageView
                                    android:id="@+id/shareweichat"
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_marginRight="5dip"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/shareweichat"
                                    android:visibility="visible"/>
                                <TextView
                                    android:id="@+id/shareweichat_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="转发"
                                    android:textColor="#7081a5"
                                    android:textSize="14sp" />
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/zan_btn"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1.0"
                                android:background="@drawable/dialog_cancle_btn"
                                android:gravity="center_horizontal|center_vertical"
                                android:orientation="horizontal" >

                                <ImageView
                                    android:id="@+id/zan_btn_icon"
                                    android:layout_width="20dip"
                                    android:layout_height="20dip"
                                    android:layout_marginRight="5dip"
                                    android:background="@drawable/friends_loop_cancle_zan_icon_d"
                                    android:contentDescription="@string/desc"
                                    android:scaleType="centerInside" />

                                <TextView
                                    android:id="@+id/zan_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/zan_for_me"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />
                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/comment_btn_layout"
                                android:layout_width="fill_parent"
                                android:layout_height="40dp"
                                android:layout_weight="1.0"
                                android:background="@drawable/dialog_ok_btn"
                                android:gravity="center_horizontal|center_vertical"
                                android:orientation="horizontal" >

                                <ImageView
                                    android:layout_width="20dip"
                                    android:layout_height="20dip"
                                    android:layout_marginRight="5dip"
                                    android:background="@drawable/view_image_comment_icon"
                                    android:scaleType="centerInside" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/comment"
                                    android:textColor="@color/black"
                                    android:textSize="14sp" />
                            </LinearLayout>
                        </LinearLayout>

                        <Button
                            android:id="@+id/function_btn"
                            android:layout_width="35dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/fiends_loop_pop_btn"
                            android:focusable="false"
                            android:visibility="gone"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/other_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dip"
                android:background="@drawable/friens_loop_comment_list_bg"
                android:orientation="vertical"
                android:paddingBottom="10dip"
                android:paddingTop="10dip"
                android:visibility="visible" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dip"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/zan_icon"
                        android:layout_width="25dip"
                        android:layout_height="25dip"
                        android:layout_marginRight="10dip"
                        android:contentDescription="@string/desc"
                        android:scaleType="centerInside"
                        android:src="@drawable/blue_icon_zan"
                        android:visibility="visible" />

                    <LinearLayout
                        android:id="@+id/zan_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/zan_icon"
                        android:orientation="vertical" >
                    </LinearLayout>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/c_z_splite"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/splite"
                    android:visibility="gone" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dip"
                    android:layout_marginTop="5dip"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/comment_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/splite"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dip"
            android:background="@drawable/devider_line"
            android:contentDescription="@string/desc" />

        <RelativeLayout
            android:id="@+id/comment_menu"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:background="@color/backgroud_color"
            android:visibility="visible" >

            <ImageView
                android:id="@+id/pic"
                android:layout_width="30dip"
                android:layout_height="30dip"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dip"
                android:background="@drawable/emoji_icon_btn"
                android:contentDescription="@string/desc" />

            <EditText
                android:id="@+id/edit"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/send"
                android:layout_toRightOf="@+id/pic"
                android:background="@drawable/cirle_edit_bg"
                android:hint="@string/say_nothing"
                android:paddingBottom="10dip"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:paddingTop="8dip" />

            <Button
                android:id="@+id/send"
                android:layout_width="60dip"
                android:layout_height="40dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="5dip"
                android:background="@drawable/send_msg_btn"
                android:text="@string/send"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </RelativeLayout>

        <include layout="@layout/emoji_layout" />
    </LinearLayout>

</RelativeLayout>